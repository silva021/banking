<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/txtTypeTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferencia enviada"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTypeTransaction"
        android:layout_alignStart="@id/txtTypeTransaction"
        android:layout_alignLeft="@id/txtTypeTransaction"
        android:text="Lucas Silva"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="33dp"
        android:gravity="center"
        android:text="R$ 500.00"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>