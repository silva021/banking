<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/splashScreenFragment">


    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.silva021.home.ui.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <deepLink app:uri="app://SPLASH_SCREEN" />
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.silva021.home.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <deepLink app:uri="app://HOME_SCREEN" />
    </fragment>

    <fragment
        android:id="@+id/extractFragment"
        android:name="com.silva021.extract.ExtractFragment"
        tools:layout="@layout/fragment_extract">
        <deepLink app:uri="app://EXTRACT_SCREEN" />
    </fragment>

    <fragment
        android:id="@+id/creditFragment"
        android:name="com.silva021.credit.ui.CreditFragment"
        tools:layout="@layout/fragment_credit">
        <deepLink app:uri="app://CREDIT_SCREEN" />
    </fragment>


</navigation>